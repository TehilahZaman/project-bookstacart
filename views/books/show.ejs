<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Book Show</title>
  </head>
  <body>
    <%- include('../partials/_navbar')%>
    <h1><%=book.title%></h1>

    <div class="mid-body">
      <img src="<%=book.thumbnail%>" width="140" height="180" />
      <div id="show-author">
        Author: <% book.authors.forEach((author, index) => {%>
        <%=author%><%=index < book.authors.length - 1 ? ',' : ' ' %> <% }) %>
      </div>
      <div id="show-genre">Genre: <%=book.genre%></div>
      <% if (book.summary) { %>
      <p class="show-summary">Summary: <%= book.summary %></p>
      <% } else {%>
      <p class="show-summary"></p>
      <% } %>
    </div>
    <% if (user){ %>
    <form action="/books/tocart/<%=book._id%>?_method=PUT" method="POST">
      <input
        type="text"
        name="title"
        id="title"
        value="<%=book.title%>"
        hidden
      />
      <input
        type="text"
        name="author"
        id="author"
        value="<%=book.authors%>"
        hidden
      />
      <input
        type="text"
        name="genre"
        id="genre"
        value="<%=book.genre%>"
        hidden
      />
      <input
        type="text"
        name="summary"
        id="summary"
        value="<%=book.summary%>"
        hidden
      />

      <button id="add-one" type="submit">Add to cart</button>
    </form>
    <% } else { %>
    <p><a href="/auth/sign-in">Login </a>to add to cart</p>
    <% } %>
    <h2>Reviews:</h2>
    <form action="/books/<%=book._id%>/reviewed-by" method="POST">
      <label for="text">Leave a review!</label>
      <input type="text" name="text" id="text" />

      <button type="submit">Submit</button>
    </form>
    <% book.reviews.forEach(review => { %>
      <!-- only show page if edit is true, make sure the review opened to be edited matches the review clicked on  -->
      <% if (edit && editReview._id === review._id) { %>
        <form action="/books/<%=book._id%>/reviewed-by/<%=review._id%>?_method=PUT" method="POST">
         <input type="text" name="text" id="text" value="<%=review.text%>"/>
    
         <button type="submit">Submit</button>
       </form>
       
       <% } else { %>
        <p><%=review.text%></p>
    <p><%=review.user.username%> Posted on: <%=String(review.updatedAt).substr(3, 13)%></p>
        <a href="/books/<%=book._id%>/reviewed-by/<%=review._id%>/edit">Edit</a
        <% } %>
      <form action="/books/<%=book._id%>/reviewed-by/<%=review._id%>?_method=DELETE" method="POST">
        <button type="submit">Delete</button>
      </form>
        <% }) %>

  </body>
</html>
